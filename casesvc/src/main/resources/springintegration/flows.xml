<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:int-jms="http://www.springframework.org/schema/integration/jms"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
  http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
  http://www.springframework.org/schema/integration/jms http://www.springframework.org/schema/integration/jms/spring-integration-jms.xsd">

    <int:annotation-config/>

    <!-- START of section to define a default poller -->
    <int:channel id="casePollerError" />
    <bean id="casePollerErrorQueue" class="org.apache.activemq.command.ActiveMQQueue">
        <constructor-arg value="Case.CasePollerErrors"/>
    </bean>
    <int-jms:outbound-channel-adapter id="casePollerErrorJmsOut" destination="casePollerErrorQueue" channel="casePollerError"/>
    <int:poller id="defaultPoller" default="true" error-channel="casePollerError" fixed-delay="${case-default-poller.fixedDelay}" time-unit="MILLISECONDS" max-messages-per-poll="${case-default-poller.msgPerPoll}" receive-timeout="5000" />
    <!-- END of section to define a default poller -->

    <import resource="case-receipt-inbound-flow.xml"/>
    <import resource="case-receipt-outbound-flow.xml"/>
    <import resource="case-notification-outbound-flow.xml"/>

</beans>

